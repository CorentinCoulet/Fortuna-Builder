datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  username  String @unique
  email     String @unique
  password  String
  createdAt DateTime @default(now())
}

model Actions {
  id          Int     @id @default(autoincrement())
  definition  Json
  description Json
}

model EquipmentItemTypes {
  id          Int     @id @default(autoincrement())
  definition  Json
  title       Json
}

model ItemTypes {
  id          Int     @id @default(autoincrement())
  definition  Json
  title       Json
}

model Items {
  id          Int     @id @default(autoincrement())
  definition  Json
  title       Json
  description Json
}

model JobItems {
  id          Int     @id @default(autoincrement())
  definition  Json
  title       Json
  description Json
}

model States {
  id          Int     @id @default(autoincrement())
  definition  Json
  title       Json
}
