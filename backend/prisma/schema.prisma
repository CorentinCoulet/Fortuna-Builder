datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  username  String @unique
  email     String @unique
  password  String
  createdAt DateTime @default(now())
}

model Actions {
  id          Int     @id @default(autoincrement())
  definition  Json
  description Json
  version     String
}

